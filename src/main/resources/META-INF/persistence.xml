<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="ComedorUNLP_TTPS_2015">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<!--<class>ar.edu.unlp.ttps.ComedorUNLP_TTPS_2015.model.Componente.java</class> -->
		<properties>
			<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" />

			<property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/comedor_unlp" />
			<property name="hibernate.connection.username" value="root" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
			<property name="hibernate.hbm2ddl.auto" value="create" />
			<!-- <property name="hibernate.hbm2dll.auto" value="create" /> -->
			<property name="hibernate.show_sql" value="true" />
		</properties>
	</persistence-unit>
</persistence>