<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:jdbc="http://www.springframework.org/schema/jdbc" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/jdbc http://www.springframework.org/schema/jdbc/spring-jdbc-3.0.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
	http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.0.xsd
	http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd
	http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd">

	<!-- Annotation enable -->
	<context:annotation-config />
	<context:component-scan base-package="" />

	<!-- Transactional enable -->
	<!-- <tx:annotation-driven mode="proxy" /> -->

	<!-- enable annotation web -->
	<mvc:annotation-driven />

	<!-- Data source connection -->
	<bean id="dataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="com.mysql.jdbc.Driver" />
		<property name="url" value="jdbc:mysql://localhost:3306/comedor_unlp" />
		<property name="username" value="root" />
		<property name="password" value="root" />
	</bean>

	<!-- Session Factory bean -->
	<bean id="sessionFactory"
		class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="configLocation" value="classpath:hibernate.cfg.xml" />
		<property name="hibernateProperties">
			<props>
				<!-- Hibernate basic configuration -->
				<prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
				<prop key="hibernate.hbm2ddl.auto">create</prop>
			</props>
		</property>
	</bean>

	<bean id="transactionManager"
		class="org.springframework.orm.hibernate4.HibernateTransactionManager">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>

	<!-- Transaction Aspect -->
	<tx:advice id="txAdvice" transaction-manager="transactionManager">
		<tx:attributes>
			<tx:method name="*" />
		</tx:attributes>
	</tx:advice>

	<aop:config>
		<aop:advisor advice-ref="txAdvice"
			pointcut="execution(* ar.edu.unlp.lifia.grupo7.services.impl.*.*(..))" />
	</aop:config>


	<!-- Beans DAO -->
	<bean id="rangeDao"
		class="ar.edu.unlp.lifia.grupo7.persistence.dao.impl.RangeDaoImpl">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="groupRoleDao"
		class="ar.edu.unlp.lifia.grupo7.persistence.dao.impl.GroupRoleDaoImpl">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="groupDao"
		class="ar.edu.unlp.lifia.grupo7.persistence.dao.impl.GroupDaoImpl">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="spyDao"
		class="ar.edu.unlp.lifia.grupo7.persistence.dao.impl.SpyDaoImpl">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="authenticatedRestrictedFileDao"
		class="ar.edu.unlp.lifia.grupo7.persistence.dao.impl.AuthenticatedRestrictedFileDaoImpl">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="authorizedRestrictedFileDao"
		class="ar.edu.unlp.lifia.grupo7.persistence.dao.impl.AuthorizedRestrictedFileDaoImpl">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="fileDao"
		class="ar.edu.unlp.lifia.grupo7.persistence.dao.impl.FileDaoImpl">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="messageDao"
		class="ar.edu.unlp.lifia.grupo7.persistence.dao.impl.MessageDaoImpl">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="communicationStateDao"
		class="ar.edu.unlp.lifia.grupo7.persistence.dao.impl.CommunicationStateDaoImpl">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="groupIntegrantDao"
		class="ar.edu.unlp.lifia.grupo7.persistence.dao.impl.GroupIntegrantDaoImpl">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="accessDeniedNotificationDao"
		class="ar.edu.unlp.lifia.grupo7.persistence.dao.impl.AccessDeniedNotificationDaoImpl">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>



	<!-- Beans Service -->
	<bean id="rangeService" class="ar.edu.unlp.lifia.grupo7.services.impl.RangeServiceImpl">
		<property name="rangeDao" ref="rangeDao" />
	</bean>
	<bean id="groupRoleService"
		class="ar.edu.unlp.lifia.grupo7.services.impl.GroupRoleServiceImpl">
		<property name="groupRoleDao" ref="groupRoleDao" />
	</bean>
	<bean id="groupService" class="ar.edu.unlp.lifia.grupo7.services.impl.GroupServiceImpl">
		<property name="spyDao" ref="spyDao" />
		<property name="groupDao" ref="groupDao" />
		<property name="groupRoleDao" ref="groupRoleDao" />
		<property name="groupIntegrantDao" ref="groupIntegrantDao" />
	</bean>
	<bean id="communicationStateService"
		class="ar.edu.unlp.lifia.grupo7.services.impl.CommunicationStateServiceImpl">
		<property name="communicationStateDao" ref="communicationStateDao" />
	</bean>
	<bean id="spyService" class="ar.edu.unlp.lifia.grupo7.services.impl.SpyServiceImpl">
		<property name="spyDao" ref="spyDao" />
		<property name="rangeDao" ref="rangeDao" />
		<property name="groupDao" ref="groupDao" />
		<property name="communicationStateDao" ref="communicationStateDao" />
	</bean>
	<bean id="authenticatedRestrictedFileService"
		class="ar.edu.unlp.lifia.grupo7.services.impl.AuthenticatedRestrictedFileServiceImpl">
		<property name="authenticatedRestrictedFileDao" ref="authenticatedRestrictedFileDao" />
		<property name="authorizedRestrictedFileService" ref="authorizedRestrictedFileService" />
		<property name="authorizedRestrictedFileDao" ref="authorizedRestrictedFileDao" />
		<property name="spyDao" ref="spyDao" />
	</bean>
	<bean id="authorizedRestrictedFileService"
		class="ar.edu.unlp.lifia.grupo7.services.impl.AuthorizedRestrictedFileServiceImpl">
		<property name="fileService" ref="fileService" />
		<property name="spyDao" ref="spyDao" />
		<property name="groupDao" ref="groupDao" />
		<property name="rangeDao" ref="rangeDao" />
		<property name="groupRoleDao" ref="groupRoleDao" />
	</bean>
	<bean id="fileService" class="ar.edu.unlp.lifia.grupo7.services.impl.FileServiceImpl">
		<property name="fileDao" ref="fileDao" />
		<property name="spyDao" ref="spyDao" />
	</bean>
	<bean id="messageService"
		class="ar.edu.unlp.lifia.grupo7.services.impl.MessageServiceImpl">
		<property name="messageDao" ref="messageDao" />
	</bean>
	<bean id="accessDeniedNotificationService"
		class="ar.edu.unlp.lifia.grupo7.services.impl.AccessDeniedNotificationServiceImpl">
		<property name="accessDeniedNotificationDao" ref="accessDeniedNotificationDao" />
	</bean>

</beans>